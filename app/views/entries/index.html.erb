<h1>Listing Entries</h1>

  <% @entries.each do |entry| %>

    <%= div_for entry do %>
    <p>
      <h3><%= link_to(entry.title, entry_path(entry.title)) %></h3>
      <h5><%= entry.body %> </h5>
      <strong>Posted <%= time_ago_in_words(entry.created_at) %> ago</strong> |
        <%= link_to 'Edit', edit_entry_path(entry) %> | <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %>

    </p>
  <% end %>

